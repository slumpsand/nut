{
    "version": "2.0.0",

    "tasks": [
        {
            "taskName": "Run in Browser",
            "identifier": "run-in-browser",
            "type": "shell",

            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            "windows": {
                "command": "start",
                "args": [
                    "firefox.exe",
                    "file://${workspaceRoot}/start.html"
                ]
            },
            "linux": {
                "command": "firefox",
                "args": [
                    "file://${workspaceRoot}/start.html"
                ]
            },

            "problemMatcher": [],

            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
